{
  "name": "@growi/mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) HTTP server with Bearer authentication that connects AI models to GROWI wiki content.",
  "type": "module",
  "license": "MIT",
  "author": "Yuki Takei <yuki@weseek.co.jp>",
  "keywords": ["mcp", "growi", "llm", "ai", "http"],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "@growi/mcp": "./dist/index.js"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "pnpm ncc build ./src/index.ts --license ./LICENSE",
    "prebuild": "pnpm run clean",
    "clean": "rimraf dist",
    "start": "pnpm build && cross-env NODE_ENV=production node dist/index.js",
    "dev": "nodemon --watch src --ext ts,json --exec \"cross-env NODE_ENV=development pnpm tsx src/index.ts\"",
    "lint": "biome check",
    "test": "pnpm vitest run",
    "test:coverage": "pnpm vitest run --coverage"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "dotenv-flow": "^4.1.0",
    "fastmcp": "^2.0.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@growi/core": "^1.5.0",
    "@growi/sdk-typescript": "^1.8.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^20.11.30",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "ky": "^1.8.2",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
